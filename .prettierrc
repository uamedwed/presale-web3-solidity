{
  "trailingComma": "none",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "singleQuote": false,
        "printWidth": 120,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "plugins": ["prettier-plugin-solidity"]
      }
    },
    {
      "files": "*.ts",
      "options": {
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 2,
        "useTabs": false,
        "semi": false,
        "parser": "typescript"
      }
    }
  ]
}